# Shopify Backup Configuration
# Copy this file to .env and fill in your values

# Required: Your Shopify store domain
SHOPIFY_STORE=your-store.myshopify.com

# Required: Shopify Admin API access token
# Generate at: https://admin.shopify.com/store/YOUR_STORE/settings/apps/development
SHOPIFY_ACCESS_TOKEN=shpat_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Optional: Directory to store backups (default: /backups/shopify)
BACKUP_DIR=/backups/shopify

# Optional: Number of days to retain backups (default: 30)
RETENTION_DAYS=30
